{
  "name": "vscode-dotnet-manager",
  "displayName": "vscode-dotnet-manager",
  "description": "Manage your .NET projects directly within VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-dotnet-manager.dotnetVersion",
    "onCommand:vscode-dotnet-manager.dotnetNew",
    "onCommand:vscode-dotnet-manager.dotnetNewSolution"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-dotnet-manager.dotnetVersion",
        "title": ".NET CLI: Version"
      },
      {
        "command": "vscode-dotnet-manager.dotnetNew",
        "title": ".NET CLI: New Project"
      },
      {
        "command": "vscode-dotnet-manager.dotnetNewSolution",
        "title": ".NET CLI: New Solution"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "compile": "tsc --noEmit",
    "bundle": "esbuild src/extension.ts --bundle --platform=node --external:vscode --outdir=out --format=cjs",
    "build": "yarn bundle --tsconfig=tsconfig.build.json --minify",
    "watch": "yarn bundle --watch --sourcemap",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.10",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.15.16",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  }
}
